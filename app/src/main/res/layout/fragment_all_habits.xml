<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.AllHabitsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/all_wallet_action_bar"
        android:background="@color/black_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/all_wallet_label"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="All Habits"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_marginLeft="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/all_habits_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/all_wallet_action_bar"
        android:background="@color/black_gray"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Habits"
            android:textColor="@color/white"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:textSize="25sp"/>

        <View
            android:layout_width="240dp"
            android:layout_height="40dp"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"

            android:src="@drawable/baseline_arrow_forward_24"
            app:tint="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/one_time_task_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/all_habits_choose"
        android:background="@color/black_gray"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="One-time Tasks"
            android:textColor="@color/white"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:textSize="25sp"/>

        <View
            android:layout_width="135dp"
            android:layout_height="40dp"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"

            android:src="@drawable/baseline_arrow_forward_24"
            app:tint="@color/white"/>
    </LinearLayout>

